<h1>New Transaction</h1>

<div class="add-transaction-form-container">
    <%= form_with model: @record, url: category_records_path(@category), method: :post, local: true do |form| %>
        <div class="field">
            <%= form.label :name %><br />
            <%= form.text_field :name, autofocus: true %>
        </div>

        <div class="field">
            <%= form.label :amount %><br />
            <%= form.number_field :amount %>
        </div>

        <div class="actions">
            <%= form.submit "Create transaction" %>
        </div>
    <% end %>
</div>